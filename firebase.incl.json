{
  "functions": {
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" ci"
  },
  "hosting": {
    "public": "dist",
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      },
      {
        "source": "**/!(*.*)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=0"
          }
        ]
      }
    ],
    "i18n": {
      "root": "/i18n"
    },
    "redirects": [],
    "rewrites": [
      {
        "source": "/i18n/**",
        "function": "i18n404"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": 8080
    }
  }
}
